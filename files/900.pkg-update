# Fetch all available pkg upgrades in order to have them monitored by zabbix
/usr/local/sbin/pkg update -q

# Fetch for all jails
# jq is not in base - (jls --libxo json | jq -r '."jail-information".jail[].jid')
for J in $(jls -h jid | tail -n +2); do
    /usr/local/sbin/pkg -j $J update -q
done
