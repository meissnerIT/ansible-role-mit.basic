#!/bin/sh -
#
# Managed by ansible (mit.basic)
# DO NOT EDIT THIS FILE BY HAND -- YOUR CHANGES WILL BE OVERWRITTEN

# https://docs.freebsd.org/en/books/handbook/cutting-edge/
freebsd-update cron

if test -f /opt/bin/zabbix-lld-jail-bases; then
    for root in $(/opt/bin/zabbix-lld-jail-bases --raw); do
        # we had our delay before, so use --not-running-from-cron now
        freebsd-update -b $root --not-running-from-cron fetch >/dev/null
    done
fi
